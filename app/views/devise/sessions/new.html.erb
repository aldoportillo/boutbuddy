<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
   <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, required: true, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

    <div class="form-group col-md-6 mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, required: true, class: 'form-control', autocomplete: "new-password", minlength: @minimum_password_length %>
    </div>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
