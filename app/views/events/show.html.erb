<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <img src="<%= @event.photo %>" class="img-fluid mb-4">

      <div class="d-flex justify-content-between mb-3">
        <h2><%= @event.title %></h2>
        <h2>$<%= @event.price %> Entry</h2>
      </div>

      <div class="d-flex justify-content-between mb-3">
        <h3><%= @event.time.strftime("%a, %b %e, %Y") %></h3>
        <h3><%= @event.time.strftime("%l:%M %p") %></h3>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><%= @event.venue.name %></h3>
        <button class="btn btn-primary">Get Directions</button>
      </div>

      <p class="mb-4"><%= @event.bio %></p>

      <ul class="nav nav-pills nav-justified">
        <li class="nav-item">
          <%= link_to "Bouts", event_bouts_path(@event), class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", event_messages_path(@event), class: "nav-link" %>
        </li>
      </ul>

      <h3 class="mb-3">Bouts</h3>
      <% @event.bouts.each do |bout| %>
        <%= render partial: "bouts/bout", locals: { bout: bout } %>
      <% end %>
    </div>
  </div>
</div>
