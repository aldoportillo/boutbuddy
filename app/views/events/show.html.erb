<p style="color: green"><%= notice %></p>

<img src="https://www.foxsports.com.au/pmd/images/2023/09/10/866078_640x360_large_20230910141723.jpg">

<div class="__space_between">
  <h2><%= @event.title %></h2>
  
  <h2>$<%= @event.price %> Entry</h2>
</div>
<div class="__space_between">
  <h3><%= @event.time.strftime("%a, %b %e, %Y") %></h3>
  <h3><%= @event.time.strftime("%l:%M %p") %></h3>
</div>
<div class="__space_between">
  <h3><%= @event.venue.name %></h3>
  <%= link_to new_event_bout_path(@event) do %>
    <button>Register</button>
  <% end %>
</div>



<%= @event.bio %>


<h3>Bouts</h3>

<% @event.bouts.each do |bout|%>
  <%= render partial:"bouts/bout", locals: { bout: bout} %>
<% end %>

<h3>Messages</h3>

  <% @event.messages.each do |message| %>

    <%= render partial:"shared/message", locals: { message: message} %>
  <% end %>
  
<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>
