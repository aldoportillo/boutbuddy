<div class="row justify-content-between align-items-center">
  <h2 class="col-auto">Fighters</h2>
  
  <%= search_form_for @q, class: 'col-auto' do |form| %>
    <div class="input-group">
      <%= form.text_field :username_cont, placeholder: "name", aria_label: "Search", class: "form-control" %>
      <div class="input-group-append">
        <%= form.submit "Search", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
</div>


<div class="container mt-5">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <%= link_to user_path(user.username), class: "text-dark text-decoration-none" do %>
          <div class="card h-100">
            <%= image_tag user.photo_url, class: "card-img-top fence-background", alt: "#{user.username}-photo" %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= user.first_name %> <%= user.last_name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
