<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @venue.name %></h2>
      <p class="card-text"><strong>Address:</strong> <%= @venue.address %></p>
      <p class="card-text"><strong>Latitude:</strong> <%= @venue.lat %></p>
      <p class="card-text"><strong>Longitude:</strong> <%= @venue.lng %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to venues", venues_path, class: "btn btn-outline-secondary" %>
    <% if current_user.role == "promoter"%>
      <%= link_to "Edit this venue", edit_venue_path(@venue), class: "btn btn-outline-secondary" %>

      <%= button_to "Destroy this venue", @venue, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <% end %>
  </div>

</div>
