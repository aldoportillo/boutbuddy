<div class="bout_card d-flex justify-content-between mb-3 p-3 bg-white" id="<%= dom_id bout %>">
  <!-- Red Corner Fighter -->
  <div class="d-flex align-items-center">
    <img src="<%= bout.red_corner_fighter.photo %>" class="rounded-circle" style="width:100px; height: 100px; object-fit: cover; object-position: 0 0;">
    <div class="ms-3">
      <%= link_to user_path(bout.red_corner_fighter.username) do %>
        <h4 class="mb-0"><%= bout.red_corner_fighter.first_name %> <%= bout.red_corner_fighter.last_name %></h4>
      <% end %>
      <p class="mb-0">Reach: <%= bout.red_corner_fighter.reach %></p>
      <p class="mb-0">Height: <%= bout.red_corner_fighter.height %></p>
    </div>
  </div>

  <!-- Bout Weight Class and Win Form -->
  
  <div class="col-md-6 align-self-center">
    <h3><%= bout.weight_class.name %></h3>
    <% if current_user == bout.event.promoter  && %>
      <% new_result = Result.new %>
      <%= render 'results/form', result: new_result, event: @event, bout: bout %>
    <% end %>
  </div>


  <!-- Blue Corner Fighter -->
  <div class="d-flex align-items-center">
    <div class="me-3">
      <%= link_to user_path(bout.blue_corner_fighter.username) do %>
        <h4 class="mb-0"><%= bout.blue_corner_fighter.first_name %> <%= bout.blue_corner_fighter.last_name %></h4>
      <% end %>
      <p class="mb-0">Reach: <%= bout.blue_corner_fighter.reach %></p>
      <p class="mb-0">Height: <%= bout.blue_corner_fighter.height %></p>
    </div>
    <img src="<%= bout.blue_corner_fighter.photo %>" class="rounded-circle" style="width:100px; height: 100px; object-fit: cover; object-position: 0 0;">
  </div>

</div>
